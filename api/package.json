{
  "name": "lapor-api",
  "version": "0.1.0",
  "private": true,
  "main": "dist/index.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/index.js",
    "test": "vitest",
    "clean:tests": "rm -f test/*.js || true",
    "ci": "npm run prisma:generate && npx vitest run",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev"
  },
  "dependencies": {
    "@prisma/client": "^6.16.3",
    "cors": "^2.8.5",
    "dotenv": "^16.0.0",
    "express": "^4.18.2",
    "zod": "^3.23.2"
  },
  "devDependencies": {
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.17",
    "@types/node": "^20.0.0",
    "@types/supertest": "^2.0.16",
    "prisma": "^6.16.3",
    "supertest": "^6.3.4",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.0.0",
    "vitest": "^0.34.6"
  },
  "vitest": {
    "include": [
      "test/**/*.ts"
    ]
  }
}
